<% content_for :title, "Payouts" %>

<div class="mb-6">
  <div class="flex items-center justify-between mb-4">
    <h1 class="text-2xl font-bold text-gray-900">Payouts</h1>
    <div class="flex gap-2">
      <%= link_to "New Payout",
            new_madmin_payout_path,
            class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 " \
                   "rounded-lg transition-colors" %>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-lg shadow p-4 mb-4">
    <%= form_with url: madmin_payouts_path,
          method: :get,
          local: true,
          class: "grid grid-cols-1 md:grid-cols-3 gap-4" do |f| %>
      <div>
        <%= label_tag :account_id,
              "Account",
              class: "block text-sm font-medium text-gray-700 mb-1" %>
        <% user_accounts = current_user.real_accounts.order(:name) %>
        <% if user_accounts.none? %>
          <%= select_tag :account_id,
                options_for_select([["No accounts available", ""]]),
                disabled: true,
                class: "w-full px-3 py-2 border border-gray-300 rounded-md " \
                       "bg-gray-100 text-gray-500 cursor-not-allowed" %>
        <% else %>
          <%= select_tag :account_id,
                options_from_collection_for_select(
                  user_accounts, :id, :to_s, params[:account_id]
                ),
                prompt: (user_accounts.many? ? "All Accounts" : nil),
                class: "w-full px-3 py-2 border border-gray-300 rounded-md " \
                       "focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <% end %>
      </div>

      <div>
        <%= label_tag :request_status,
              "Request Status",
              class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= select_tag :request_status,
              options_for_select(
                Payout::REQUEST_STATUSES.map { |status| [status.titleize, status] },
                params[:request_status]
              ),
              prompt: "All Statuses",
              class: "w-full px-3 py-2 border border-gray-300 rounded-md " \
                     "focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="flex items-end gap-2">
        <%= submit_tag "Filter", class: "btn btn-primary" %>
        <%= link_to "Clear", madmin_payouts_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>

<!-- Payouts Table -->
<div class="bg-white rounded-lg shadow overflow-hidden">
  <table class="w-full">
    <thead class="bg-gray-50 border-b border-gray-200">
      <tr>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-600 uppercase">Account</th>
        <th class="px-4 py-3 text-right text-xs font-medium text-gray-600 uppercase">Amount Requested (Date)</th>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-600 uppercase">Status</th>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-600 uppercase">Payout Number</th>
        <th class="px-4 py-3 text-right text-xs font-medium text-gray-600 uppercase">Amount Paid (Date)</th>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-600 uppercase">Notes</th>
        <th class="px-4 py-3 text-right text-xs font-medium text-gray-600 uppercase">Actions</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
      <% if @payouts.any? %>
        <% @payouts.each do |payout| %>
          <tr class="hover:bg-gray-50">
            <td class="px-4 py-3 whitespace-nowrap text-xs text-gray-900">
              <%= payout.account.to_s %>
            </td>
            <td class="px-4 py-3 whitespace-nowrap text-xs text-right text-gray-900">
              <%= number_to_currency(payout.amount_requested, precision: 2) %>
              <br>
              <span class="text-gray-500">(<%= payout.requested_date.strftime("%b %d, %Y") %>)</span>
            </td>
            <td class="px-4 py-3 whitespace-nowrap text-xs">
              <% status_classes = {
                   "pending" => "bg-yellow-100 text-yellow-800",
                   "approved" => "bg-green-100 text-green-800",
                   "declined" => "bg-red-100 text-red-800"
                 } %>
              <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium
                <%= status_classes[payout.request_status] %>">
                <%= payout.request_status.titleize %>
              </span>
            </td>
            <td class="px-4 py-3 whitespace-nowrap text-xs text-gray-900">
              <%= payout.payout_number %>
            </td>
            <td class="px-4 py-3 whitespace-nowrap text-xs text-right text-gray-900">
              <% if payout.amount_paid.present? %>
                <%= number_to_currency(payout.amount_paid, precision: 2) %>
                <% if payout.received_date.present? %>
                  <br>
                  <span class="text-gray-500">(<%= payout.received_date.strftime("%b %d, %Y") %>)</span>
                <% end %>
              <% else %>
                <span class="text-gray-400">-</span>
              <% end %>
            </td>
            <td class="px-4 py-3 text-xs text-gray-900">
              <%= truncate(payout.notes, length: 50) if payout.notes.present? %>
            </td>
            <td class="px-4 py-3 whitespace-nowrap text-xs text-right">
              <%= link_to "View",
                    madmin_payout_path(payout),
                    class: "text-blue-600 hover:text-blue-800 mr-3" %>
              <%= link_to "Edit",
                    edit_madmin_payout_path(payout),
                    class: "text-blue-600 hover:text-blue-800" %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="7" class="px-6 py-8 text-center text-gray-500">
            No payouts found matching your filters.
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% if @pagy.pages > 1 %>
    <div class="px-6 py-4 border-t border-gray-200">
      <div class="flex items-center justify-between">
        <div class="text-sm text-gray-600">
          Page <%= @pagy.page %> of <%= @pagy.pages %>
        </div>
        <nav class="pagination" role="navigation" aria-label="Pagination">
          <% filter_params = params.except(:page, :controller, :action).permit!.to_h %>
          <% if @pagy.prev %>
            <%= link_to "Previous",
                  madmin_payouts_path(page: @pagy.prev, **filter_params),
                  class: "prev" %>
          <% else %>
            <span class="prev disabled">Previous</span>
          <% end %>

          <% @pagy.series.each do |item| %>
            <% if item.is_a?(Integer) %>
              <% if item == @pagy.page %>
                <span class="current"><%= item %></span>
              <% else %>
                <%= link_to item,
                      madmin_payouts_path(page: item, **filter_params) %>
              <% end %>
            <% elsif item == :gap %>
              <span class="gap">â€¦</span>
            <% end %>
          <% end %>

          <% if @pagy.next %>
            <%= link_to "Next",
                  madmin_payouts_path(page: @pagy.next, **filter_params),
                  class: "next" %>
          <% else %>
            <span class="next disabled">Next</span>
          <% end %>
        </nav>
      </div>
    </div>
  <% end %>
</div>
