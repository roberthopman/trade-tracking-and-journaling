<% content_for :title, "Trades" %>

<div class="mb-6">
  <% if params[:start_date].present? && params[:start_date] == params[:end_date] %>
    <div class="mb-4">
      <nav class="text-sm">
        <%= link_to "Trading Journal",
              madmin_dashboard_path(account_id: params[:account_id]),
              class: "text-blue-600 hover:text-blue-800" %>
        <span class="text-gray-500 mx-2">→</span>
        <span class="text-gray-900">
          Trades for <%= Date.parse(params[:start_date]).strftime("%B %d, %Y") %>
        </span>
      </nav>
    </div>
  <% end %>

  <div class="flex items-center justify-between mb-4">
    <h1 class="text-2xl font-bold text-gray-900">Trades</h1>
    <div class="flex gap-2">
      <%= link_to "Quick Add Trades",
            new_madmin_quick_trade_path,
            class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 " \
                   "rounded-lg transition-colors" %>
      <%= link_to "New Trade",
            new_madmin_trade_path,
            class: "bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 " \
                   "rounded-lg transition-colors" %>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white rounded-lg shadow p-4 mb-4">
    <%= form_with url: madmin_trades_path,
          method: :get,
          local: true,
          class: "grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4" do |f| %>
      <div>
        <%= label_tag :account_id,
              "Account",
              class: "block text-sm font-medium text-gray-700 mb-1" %>
        <% user_accounts = current_user.accounts.order(:name) %>
        <% if user_accounts.none? %>
          <%= select_tag :account_id,
                options_for_select([["No accounts available", ""]]),
                disabled: true,
                class: "w-full px-3 py-2 border border-gray-300 rounded-md " \
                       "bg-gray-100 text-gray-500 cursor-not-allowed" %>
        <% else %>
          <%= select_tag :account_id,
                options_from_collection_for_select(
                  user_accounts, :id, :to_s, params[:account_id]
                ),
                prompt: (user_accounts.many? ? "All Accounts" : nil),
                class: "w-full px-3 py-2 border border-gray-300 rounded-md " \
                       "focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <% end %>
      </div>

      <div>
        <%= label_tag :symbol,
              "Symbol",
              class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= text_field_tag :symbol,
              params[:symbol],
              placeholder: "e.g. EURUSD",
              autocomplete: "off",
              class: "w-full px-3 py-2 border border-gray-300 rounded-md " \
                     "focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= label_tag :trade_type,
              "Trade Type",
              class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= select_tag :trade_type,
              options_for_select(
                Trade::TRADE_TYPES.keys.map { |key|
                  [Trade::TRADE_TYPES[key], key]
                },
                params[:trade_type]
              ),
              prompt: "All Types",
              class: "w-full px-3 py-2 border border-gray-300 rounded-md " \
                     "focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= label_tag :start_date,
              "Starting at:",
              class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= date_field_tag :start_date,
              params[:start_date],
              autocomplete: "off",
              class: "w-full px-3 py-2 border border-gray-300 rounded-md " \
                     "focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= label_tag :end_date,
              "Ending at:",
              class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= date_field_tag :end_date,
              params[:end_date],
              autocomplete: "off",
              class: "w-full px-3 py-2 border border-gray-300 rounded-md " \
                     "focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= label_tag :min_pnl,
              "Min P&L",
              class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= number_field_tag :min_pnl,
              params[:min_pnl],
              step: 0.01,
              placeholder: "e.g. -1000",
              autocomplete: "off",
              class: "w-full px-3 py-2 border border-gray-300 rounded-md " \
                     "focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= label_tag :max_pnl,
              "Max P&L",
              class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= number_field_tag :max_pnl,
              params[:max_pnl],
              step: 0.01,
              placeholder: "e.g. 1000",
              autocomplete: "off",
              class: "w-full px-3 py-2 border border-gray-300 rounded-md " \
                     "focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= label_tag :tag_id,
              "Tag",
              class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= select_tag :tag_id,
              options_from_collection_for_select(
                current_user.tags.joins(:trades).distinct.order(:name), :id, :name, params[:tag_id]
              ),
              prompt: "All Tags",
              class: "w-full px-3 py-2 border border-gray-300 rounded-md " \
                     "focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="flex items-end gap-2">
        <%= submit_tag "Filter", class: "btn btn-primary" %>
        <%= link_to "Clear", madmin_trades_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>

<!-- Trades Table -->
<div class="bg-white rounded-lg shadow overflow-hidden">
  <table class="w-full">
    <thead class="bg-gray-50 border-b border-gray-200">
      <tr>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-600 uppercase">Date</th>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-600 uppercase">Account</th>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-600 uppercase">Symbol</th>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-600 uppercase">Type</th>
        <th class="px-4 py-3 text-left text-xs font-medium text-gray-600 uppercase">Tags</th>
        <th class="px-4 py-3 text-center text-xs font-medium text-gray-600 uppercase">Notes</th>
        <th class="px-4 py-3 text-right text-xs font-medium text-gray-600 uppercase">P&L</th>
        <th class="px-4 py-3 text-right text-xs font-medium text-gray-600 uppercase">Actions</th>
      </tr>
    </thead>
    <tbody class="divide-y divide-gray-200">
      <% if @trades.any? %>
        <% @trades.each do |trade| %>
          <tr class="hover:bg-gray-50">
            <td class="px-4 py-3 whitespace-nowrap text-xs text-gray-900">
              <%= trade.trade_date.strftime("%b %d, %Y") %>
            </td>
            <td class="px-4 py-3 whitespace-nowrap text-xs text-gray-900">
              <%= trade.account.to_s %>
            </td>
            <td class="px-4 py-3 whitespace-nowrap text-xs text-gray-900">
              <%= trade.symbol %>
            </td>
            <td class="px-4 py-3 whitespace-nowrap text-xs text-gray-900">
              <%= Trade::TRADE_TYPES[trade.trade_type] || trade.trade_type %>
            </td>
            <td class="px-4 py-3 text-xs text-gray-900">
              <div class="flex flex-wrap gap-1 items-center">
                <% trade.tags.each do |tag| %>
                  <span class="inline-flex items-center px-2 py-0.5 rounded text-xs
                    font-medium"
                    style="background-color: <%= tag.color %>20; color: <%= tag.color %>;">
                    <%= tag.name %>
                  </span>
                <% end %>
              </div>
            </td>
            <td class="px-4 py-3 text-center text-xs text-gray-900">
              <% if trade.setup.present? || trade.notes.present? || trade.lesson_learned.present? %>
                <span class="relative group inline-flex items-center justify-center">
                  <svg class="w-4 h-4 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"></path>
                    <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 3 3 0 003 3h2a3 3 0 003-3 2 2 0 012 2v11a2 2 0 01-2 2H6a2 2 0 01-2-2V5zm3 4a1 1 0 000 2h.01a1 1 0 100-2H7zm3 0a1 1 0 000 2h3a1 1 0 100-2h-3zm-3 4a1 1 0 100 2h.01a1 1 0 100-2H7zm3 0a1 1 0 100 2h3a1 1 0 100-2h-3z" clip-rule="evenodd"></path>
                  </svg>
                  <div class="absolute bottom-full left-1/2 transform -translate-x-1/2 mb-2
                    px-3 py-2 text-xs text-gray-900 bg-white rounded shadow-lg border border-gray-200
                    opacity-0 group-hover:opacity-100 transition-opacity pointer-events-none
                    w-64 text-left z-10">
                    <% if trade.setup.present? %>
                      <div class="mb-2">
                        <div class="font-semibold text-gray-700 mb-1">Setup:</div>
                        <div class="text-gray-900"><%= trade.setup %></div>
                      </div>
                    <% end %>
                    <% if trade.notes.present? %>
                      <div class="mb-2">
                        <div class="font-semibold text-gray-700 mb-1">Notes:</div>
                        <div class="text-gray-900"><%= trade.notes %></div>
                      </div>
                    <% end %>
                    <% if trade.lesson_learned.present? %>
                      <div>
                        <div class="font-semibold text-gray-700 mb-1">Lesson Learned:</div>
                        <div class="text-gray-900"><%= trade.lesson_learned %></div>
                      </div>
                    <% end %>
                  </div>
                </span>
              <% end %>
            </td>
            <td class="px-4 py-3 whitespace-nowrap text-xs text-right font-semibold
              <%= trade.pnl >= 0 ? "text-green-600" : "text-red-600" %>">
              <%= number_to_currency(trade.pnl, precision: 2) %>
            </td>
            <td class="px-4 py-3 whitespace-nowrap text-xs text-right">
              <%= link_to "View",
                    madmin_trade_path(trade),
                    class: "text-blue-600 hover:text-blue-800 mr-3" %>
              <%= link_to "Edit",
                    edit_madmin_trade_path(trade),
                    class: "text-blue-600 hover:text-blue-800 mr-3" %>
              <%= link_to "Delete",
                    madmin_trade_path(trade),
                    data: {
                      turbo_confirm: "Are you sure you want to delete this trade?",
                      turbo_method: :delete
                    },
                    class: "text-red-600 hover:text-red-800 font-medium" %>
            </td>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <td colspan="8" class="px-6 py-8 text-center text-gray-500">
            No trades found matching your filters.
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <% if @pagy.pages > 1 %>
    <div class="px-6 py-4 border-t border-gray-200">
      <div class="flex items-center justify-between">
        <div class="text-sm text-gray-600">
          Page <%= @pagy.page %> of <%= @pagy.pages %>
        </div>
        <nav class="pagination" role="navigation" aria-label="Pagination">
          <% filter_params = params.except(:page, :controller, :action).permit!.to_h %>
          <% if @pagy.prev %>
            <%= link_to "Previous",
                  madmin_trades_path(page: @pagy.prev, **filter_params),
                  class: "prev" %>
          <% else %>
            <span class="prev disabled">Previous</span>
          <% end %>

          <% @pagy.series.each do |item| %>
            <% if item.is_a?(Integer) %>
              <% if item == @pagy.page %>
                <span class="current"><%= item %></span>
              <% else %>
                <%= link_to item,
                      madmin_trades_path(page: item, **filter_params) %>
              <% end %>
            <% elsif item == :gap %>
              <span class="gap">…</span>
            <% end %>
          <% end %>

          <% if @pagy.next %>
            <%= link_to "Next",
                  madmin_trades_path(page: @pagy.next, **filter_params),
                  class: "next" %>
          <% else %>
            <span class="next disabled">Next</span>
          <% end %>
        </nav>
      </div>
    </div>
  <% end %>
</div>
